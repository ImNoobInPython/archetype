<?xml version="1.0" encoding="UTF-8"?>
<themes>
  <theme name="broker-table" ref="-defaults">
    <param name="background"><image>none</image></param>
    <param name="border"><border>0,0,0,0</border></param>
    <param name="defaultGap"><dimension>5,5</dimension></param>
    <param name="smallGap"><dimension>8,8</dimension></param>
    <param name="mediumGap"><dimension>10,10</dimension></param>
    <param name="largeGap"><dimension>15,15</dimension></param>
    <param name="namedGaps"><map/></param>

    <theme name="label-info" ref="label">
      <param name="textAlignment"><enum type="alignment">CENTER</enum></param>
      <param name="border"><border>0</border></param>
    </theme>

    <theme name="button" ref="button">
      <param name="minWidth"><int>100</int></param>
      <param name="width"><int>100</int></param>
      <param name="textAlignment"><enum type="alignment">LEFT</enum></param>
    </theme>

    <!-- Sorting / Header columns -->
    <theme name="header-column" ref="label">
      <param name="background"><image>ui-header.background</image></param>
      <param name="textAlignment"><enum type="alignment">CENTER</enum></param>
    </theme>
    <theme name="header-column-sort-default" ref="header-column">
      <param name="overlay"><image>ui-sort-default.background</image></param>
    </theme>
    <theme name="header-column-sort-desc" ref="header-column">
      <param name="overlay"><image>ui-sort-asc.background</image></param>
    </theme>
    <theme name="header-column-sort-asc" ref="header-column">
      <param name="overlay"><image>ui-sort-desc.background</image></param>
    </theme>
    
    <!-- Cells -->
    <theme name="cell" ref="label">
      <param name="background"><image>ui-table-row.background</image></param>
      <param name="border"><border>8,5</border></param>
    </theme>
    <theme name="cell-markup" ref="cell">
      <param name="font"><font>alphabeta-markup</font></param>
      <param name="textAlignment"><enum type="alignment">CENTER</enum></param>
    </theme>
    <theme name="cell-warn" ref="cell">
      <param name="font"><font>alphabeta-yellow</font></param>
    </theme>
    <theme name="cell-danger" ref="cell">
      <param name="font"><font>alphabeta-red</font></param>
    </theme>
    <theme name="cell-button" ref="cell">
	  <param name="font"><font>alphabeta-highlight-button</font></param>
      <param name="background"><image>ui-button.background</image></param>
      <param name="textAlignment"><enum type="alignment">CENTER</enum></param>
    </theme>
    <theme name="cell-button-addon" ref="cell-button">
      <param name="textAlignment"><enum type="alignment">left</enum></param>
    </theme>
    <theme name="cell-icon" ref="cell">
		<param name="border"><border>0</border></param>
	</theme>
    <!-- special cells -->
    <theme name="button-monster" ref="button">
      <param name="minWidth"><int>0</int></param>
      <param name="minHeight"><int>0</int></param>
    </theme>
    <theme name="button-species" ref="button"></theme>

    <theme name="editfield" ref="editfield">
      <param name="textAlignment"><enum type="alignment">RIGHT</enum></param>
      <param name="autocompletion-height"><int>150</int></param>
    </theme>
    <theme name="editfield-red" ref="editfield">
      <param name="font"><font>pb-dark-red</font></param>
    </theme>
    <theme name="valueadjuster" ref="valueadjuster" allowWildcard="true">
      <param name="width"><int>92</int></param>
    </theme>
  </theme>

  <theme name="advanced-search-dialog" ref="dialoglayout">
    <param name="border"><border>0,0,0,0</border></param>

    <!-- adv search -->
    <theme name="label-button-small2-centered" ref="button">
      <param name="minWidth"><int>100</int></param>
    </theme>
    <theme name="label-title-medium2" ref="label">
      <param name="background"><image>ui-header.background</image></param>
      <param name="textAlignment"><enum type="alignment">CENTER</enum></param>
      <param name="minWidth"><int>238</int></param>
    </theme>
    <theme name="valueadjuster" ref="valueadjuster">
      <param name="minWidth"><int>191</int></param>
    </theme>
    <theme name="combobox" ref="combobox">
      <param name="minWidth"><int>191</int></param>
    </theme>
    <theme name="editfield" ref="editfield">
      <param name="maxWidth"><int>191</int></param>
    </theme>
  </theme>

	<theme name="broker-window" ref="base-tabbed-frame">
		<param name="background"><image>GTL-Window</image></param>
		<param name="minWidth"><int>900</int></param>
		<param name="minHeight"><int>605</int></param>
		<theme name="tabbedpane" ref="base-tabbed-pane">
			<theme name="tabbox" ref="tabbox">
				<theme name="tabbutton" ref="tabbutton"></theme>
			</theme>
			<theme name="container" ref="container">
				<param name="border"><border>10,10,10,6</border></param>
				<param name="namedGaps"><map/></param>
				<theme name="editfield" ref="editfield-search"></theme>
				<theme name="label" ref="label" allowWildcard="true">
					<param name="border"><border>10,10,0,0</border></param>
					<param name="background"><image>none</image></param>
				</theme>
				<theme name="dialoglayout" ref="-defaults">
					<theme name="label-info" ref="label">
						<param name="background"><image>ui-inputbox.background</image></param>
						<param name="textAlignment"><enum type="alignment">CENTER</enum></param>
						<param name="border"><border>30</border></param>
					</theme>
				</theme>
			</theme>
			<param name="inputMap"><inputMapDef>
				<action name="nextTab">CTRL TAB</action>
				<action name="prevTab">CTRL SHIFT TAB</action>
			</inputMapDef></param>
		</theme>
	</theme>
</themes>
